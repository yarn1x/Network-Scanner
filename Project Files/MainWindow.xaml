                <Grid x:Name="Grid_editor__staticIP_container" 
                      VerticalAlignment="Center" 
                      HorizontalAlignment="Right" 
                      Margin="0,0,5,0">

                    <TextBlock x:Name="tb_staticIP_container__Header" 
						   HorizontalAlignment="Center" 
						   TextWrapping="Wrap" 
						   Text="Настройка статического IP адреса" 
						   TextAlignment="Center"
						   VerticalAlignment="Center" 
						   Margin="0,0,0,337" 
						   Foreground="#FFD8D8D8" MaxWidth="300"/>

                    <TextBox x:Name="tb_staticIP_container__staticIP" 
						 Style="{DynamicResource TextBoxStyle_smooth}" 
						 HorizontalAlignment="Center" 
						 TextWrapping="Wrap" 
						 VerticalAlignment="Center" 
						 SelectionBrush="#FF868686" 
						 Height="45" Width="200"
						 HorizontalContentAlignment="Center" 
						 VerticalContentAlignment="Center" 
						 Margin="0,0,0,170" 
                         LostFocus="tb_staticIP_container__staticIP_LostFocus" 
                         GotFocus="tb_staticIP_container__staticIP_GotFocus" 
                         Text="IPv4 Адрес" 
                         Foreground="#FF606060" 
                         MaxLength="15"/>

                    <TextBox x:Name="tb_staticIP_container__subnet_mask" 
						 Style="{DynamicResource TextBoxStyle_smooth}" 
						 HorizontalAlignment="Center" 
						 TextWrapping="Wrap"
						 VerticalAlignment="Center" 
						 SelectionBrush="#FF868686"
						 Height="45" Width="200" 
						 HorizontalContentAlignment="Center" 
						 VerticalContentAlignment="Center"
						 Margin="0,40,0,0" 
                         Text="Маска" 
                         Foreground="#FF606060" 
                         GotFocus="tb_staticIP_container__subnet_mask_GotFocus" 
                         LostFocus="tb_staticIP_container__subnet_mask_LostFocus"
                         MaxLength="15"/>

                    <TextBox x:Name="tb_staticIP_container__gateway" 
						 Style="{DynamicResource TextBoxStyle_smooth}" 
						 HorizontalAlignment="Center" 
						 TextWrapping="Wrap" 
						 VerticalAlignment="Center" 
						 SelectionBrush="#FF868686" 
						 Height="45" Width="200"
						 HorizontalContentAlignment="Center" 
						 VerticalContentAlignment="Center" 
						 Margin="0,250,0,0"
                         Text="Основной шлюз" 
                         Foreground="#FF606060" 
                         GotFocus="tb_staticIP_container__gateway_GotFocus" 
                         LostFocus="tb_staticIP_container__gateway_LostFocus"
                         MaxLength="15"/>

                    <CheckBox x:Name="cb_staticIP_container_staticIP_switcher" 
                          Style="{DynamicResource CheckBoxStyle_reColor}" 
                          Content="Получать IP &#xD;&#xA;автоматически" ToolTip="Установка IP адреса автоматически вашим сервером"
                          HorizontalAlignment="Center" 
                          Margin="0,431,0,0" 
                          VerticalAlignment="Center" 
                          HorizontalContentAlignment="Center" 
                          VerticalContentAlignment="Center" 
                          Background="#FF737373" 
                          Foreground="#FFD8D8D8" 
                          BorderBrush="{x:Null}" 
                          Padding="10,0,0,0" 
                          FontSize="12" 
                          Cursor="Hand" IsChecked="True" Click="cb_staticIP_container_staticIP_switcher_Checked">

                        <CheckBox.LayoutTransform>
                            <ScaleTransform ScaleX="2" ScaleY="2" />
                        </CheckBox.LayoutTransform>

                    </CheckBox>

                </Grid>

                <Grid x:Name="Grid_editor__DNS_container" 
                      HorizontalAlignment="Left"
                      VerticalAlignment="Center" 
                      Grid.Column="1" 
                      Margin="5,0,0,0">

                    <TextBlock x:Name="tb_DNS_container__Header" 
						   HorizontalAlignment="Center" 
						   TextWrapping="Wrap" 
						   Text="Настройка DNS сервера" 
						   TextAlignment="Center"
						   VerticalAlignment="Center" 
						   Foreground="#FFD8D8D8" Margin="0,0,0,337"/>

                    <TextBox x:Name="tb_DNS_container__primaryDNS" 
						 Style="{DynamicResource TextBoxStyle_smooth}" 
						 HorizontalAlignment="Center" 
						 TextWrapping="Wrap" 
						 VerticalAlignment="Center" 
						 SelectionBrush="#FF868686" 
						 Height="45" Width="200"
						 HorizontalContentAlignment="Center" 
						 VerticalContentAlignment="Center" 
                         Margin="0,0,-6,170" 
                         Text="Предпочитаемый DNS" 
                         Foreground="#FF606060" 
                         FontSize="18" 
                         GotFocus="tb_DNS_container__primaryDNS_GotFocus" 
                         LostFocus="tb_DNS_container__primaryDNS_LostFocus"
                         MaxLength="15"/>

                    <TextBox x:Name="tb_DNS_container__secondaryDNS" 
						 Style="{DynamicResource TextBoxStyle_smooth}" 
						 HorizontalAlignment="Center" 
						 TextWrapping="Wrap" 
						 VerticalAlignment="Center" 
						 SelectionBrush="#FF868686" 
						 Height="45" Width="200"
						 HorizontalContentAlignment="Center" 
						 VerticalContentAlignment="Center" 
                         Margin="0,40,0,0" 
                         Text="Альтернативный DNS"
                         Foreground="#FF606060" 
                         FontSize="18" 
                         GotFocus="tb_DNS_container__secondaryDNS_GotFocus"
                         LostFocus="tb_DNS_container__secondaryDNS_LostFocus"
                         MaxLength="15"/>

                    <CheckBox x:Name="cb_DNS_container__DNS_switcher" 
                          Style="{DynamicResource CheckBoxStyle_reColor}" 
                          Content="Получать DNS&#xA;автоматически" ToolTip="Установка DNS сервера автоматически вашим сервером"
                          HorizontalAlignment="Center" 
                          Margin="0,431,0,0" 
                          VerticalAlignment="Center" 
                          HorizontalContentAlignment="Center" 
                          VerticalContentAlignment="Center" 
                          Background="#FF737373" 
                          Foreground="#FFD8D8D8" 
                          BorderBrush="{x:Null}" 
                          Padding="10,0,0,0" 
                          FontSize="12" 
                          Cursor="Hand" IsChecked="True" Click="cb_DNS_container__DNS_switcher_Checked">

                        <CheckBox.LayoutTransform>
                            <ScaleTransform ScaleX="2" ScaleY="2" />
                        </CheckBox.LayoutTransform>

                    </CheckBox>

                </Grid>

            </Grid>


            <Grid x:Name="Grid_editor__navigationButtons_container" 
                  Margin="0,542,0,0">

                <Button x:Name="Btn_editor__saveChanges" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Bottom" 
                        Style="{DynamicResource ButtonStyle_smooth}" 
                        Height="70" Width="277" 
                        Cursor="Hand"
                        Margin="0,0,284,10"
                        Click="Btn_editor__saveChanges_Click"
                        ToolTip="Применить и сохранить настройки">

                    <Border x:Name="Border_saveChanges__imageContainer"
                            Background="#FFD8D8D8" 
                            Width="50" Height="50" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center">

                        <Border.OpacityMask>
                            <ImageBrush ImageSource="Res/save_mask.png"/>
                        </Border.OpacityMask>

                    </Border>

                </Button>

                <Button x:Name="Btn_editor__cancelChanges" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Bottom" 
                        Style="{DynamicResource ButtonStyle_smooth}" 
                        Height="70" Width="277"
                        Margin="282,0,0,10"
                        Cursor="Hand"
                        ToolTip="Отменить и отчистить поля" Click="Btn_editor__cancelChanges_Click">

                    <Border x:Name="Border_cancelCanges_imageContainer" 
                            Background="#FFD8D8D8"
                            Width="50" Height="50" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center">

                        <Border.OpacityMask>
                            <ImageBrush ImageSource="Res/cancel_mask.png"/>
                        </Border.OpacityMask>

                    </Border>

                </Button>

                <Grid x:Name="Grid_navigationButtons__adminNotification"
                      HorizontalAlignment="Center" 
                      VerticalAlignment="Center"
                      Width="277" Height="160" Margin="0,0,0,-600" Panel.ZIndex="1">

                    <Border x:Name="Border_adminNotification__bg" 
                            Background="#FF2D2D2D"
                            CornerRadius="10">
                    </Border>

                    <TextBlock x:Name="tb_adminNotification_text" 
                               TextWrapping="Wrap" 
                               Text="Для продолжения необходимы права администратора" 
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" 
                               Margin="0,0,0,61"
                               TextAlignment="Center"/>

                    <Button x:Name="Btn_adminNotification__restart" 
                            Style="{DynamicResource ButtonStyle_smooth}"
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center" 
                            Width="240" Height="50" 
                            Margin="0,87,0,0"
                            Content="Перезапуск"
                            Cursor="Hand" Click="Btn_adminNotification__restart_Click">

                    </Button>

                </Grid>

                <Grid x:Name="Grid_navigationButtons__warning"
                      Margin="0,0,0,85">

                    <TextBlock x:Name="tb_warning__text"
                               Text="Используя редактор, вы осознаете риски и берете всю ответственность за действия на себя."
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"
                               VerticalAlignment="Center"
                               Margin="0,0,0,90"
                               TextAlignment="Center"/>

                    <Button x:Name="Btn_warning__OK" 
                            Style="{DynamicResource ButtonStyle_smooth}"
                            Content="Принять" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" 
                            Height="63" Width="126" 
                            Margin="0,0,0,-70" Click="Btn_warning__OK_Click" Cursor="Hand"/>


                </Grid>

            </Grid>

        </Grid>

    </Grid>

</Window>
